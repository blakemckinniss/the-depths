{
  "_comment": "Copy this to settings.json and customize for your local setup",
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npm install:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Read(*)",
      "Write(src/**)",
      "Edit(src/**)",
      "Glob(*)",
      "Grep(*)"
    ],
    "deny": []
  },
  "hooks": {
    "preCommit": ".claude/hooks/pre-commit.sh"
  }
}
