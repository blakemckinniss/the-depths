{
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npm install:*)",
      "Bash(npx:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Read(*)",
      "Write(src/**)",
      "Edit(src/**)",
      "Glob(*)",
      "Grep(*)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/protect-critical-files.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/no-console.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/format-on-write.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/lint-check.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/typecheck.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": ".claude/hooks/state-mutation-guard.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/validate-ai-schemas.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/log-action.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": ".claude/hooks/session-memory.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": ".claude/hooks/git-context.sh",
            "timeout": 15
          },
          {
            "type": "command",
            "command": ".claude/hooks/system-inventory.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/stop-git-check.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": ".claude/hooks/build-check.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": ".claude/hooks/session-summary.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/context-injector.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/monolith-helper.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/new-feature-reminder.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/groq-context.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": ".claude/hooks/shadcn-helper.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
